<%= form_with model: user, local: true do |form| %>
<div class="card white-font mt-4" style="width: auto;">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <%= form.text_field :name, placeholder: "Name", class: "form-control mb-4", required: true %>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <%= form.text_field :email, placeholder: "Email", class: "form-control mb-4", required: true %>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <%= form.text_field :password, placeholder: "Password", class: "form-control mb-4", required: true %>
        </div>
    </div>
        
        <div class="actions">
        <%= form.submit "Submit", class: "btn btn-primary rounded-pill px-4 mb-4" %>
    </div>
</div>
<% end %>