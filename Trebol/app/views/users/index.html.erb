<div class="header-container d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <h1 class="h1-text">All Users</h1>
        <%= link_to boards_path, class: "card-link icon-return" do %>
            <i class="bi bi-arrow-return-left icon-color"></i>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="scrolling-wrapper">
            <table class="table custom-table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <th scope="row"><%= user.id %></th>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="<%= user_path(user) %>">View</a></li>
                            <li><a class="dropdown-item" href="<%= edit_user_path(user) %>">Edit</a></li>
                            <li>
                                <%= link_to 'Delete', user_path(user), data: { turbo_confirm: 'Are you sure?', turbo_method: "delete" }, class: "dropdown-item" %>
                            </li>
                        </ul>
                    </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>