<div class="task-box-2">
    <% if @task.label %>
        <div class="label-strip mb-3 mt-2" style="background-color: <%= @task.label.color %>;"></div>
    <% end %>
    <div class="task-details text-white">
        <div class="header-container d-flex justify-content-between align-items-center">
            <h1 class="task-title text-white ms-3 fs-4"><%= @task.title %></h1>
            <div>
                <strong><p class="text-secondary">Informer: @<%= @task.informer.name %></p></strong>
                <% if @task.assignee %>
                    <strong><p class="text-end text-secondary mt-0">Assigned to: @<%= @task.assignee.name %></p></strong>
                <% else %>
                    <p class="text-secondary mt-0">No assignee</p>
                <% end %>
            </div>  
        </div>
        <p class="text-start ms-3 text-secondary">Due Date: <%= @task.due_date.strftime("%B %d, %Y at %I:%M %p") %></p>
        <p class="text-start ms-3 text-white">Label: <%= @task.label.title %></p>
        
        <p class="text-start ms-3 text-white mb-5">Description: <%= @task.description %></p>
        

        <%= link_to 'Edit', edit_board_state_task_path(@board, @state, @task), class: "btn btn-primary custom-button" %>
        <%= link_to  board_path(@board), class: "btn btn-primary custom-button" do %>
            <i class="bi bi-arrow-90deg-left"></i>
        <% end %>
    </div>
</div>
