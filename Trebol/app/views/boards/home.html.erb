<div class="slogan"> 
    <h1>Welcome to Trebol</h1>
    <h2>Where Fortune Favors the Well Organized</h2>
</div>
<h3 class="home-text">Your Recent Boards</h3>
<div class="row">
    <div class="col">
        <div class="scrolling-wrapper">
            <% @boards_recent.each do |board| %>
            <div class="card my-3"> 
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title mb-3"><%= board.name %></h5>
                        <h6 class="card-subtitle mb-3"><%= board.published_at.strftime("%d/%m/%Y") %></h6>
                    </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="card-subtitle mb-2 text-start"> Created by <%= board.creator.name %></h6>
                            <div class="dropdown">
                                <button class="btn btn-primary custom-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="<%= board_path(board) %>">View</a></li>
                                    <li><a class="dropdown-item" href="<%= edit_board_path(board) %>">Edit</a></li>
                                    <li>
                                        <%= link_to 'Delete', board_path(board), data: { turbo_confirm: 'Are you sure?', turbo_method: "delete" }, class: "dropdown-item" %>
                                    </li>
                                </ul>
                            </div>
                       </div>     
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>