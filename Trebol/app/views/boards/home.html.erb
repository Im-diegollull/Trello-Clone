<div class="slogan"> 
    <h1>Welcome to Trebol</h1>
    <h2>Where Fortune Favors the Well Organized</h2>
</div>
<h3 class="home-text">Your Recent Boards</h3>
<div class="row">
    <div class="col">
        <div class="scrolling-wrapper">
            <% @boards_recent.each do |board| %>
            <div class="card my-3"> 
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title mb-3"><%= board.name %></h5>
                        <h6 class="card-subtitle mb-3"><%= board.published_at.strftime("%d/%m/%Y") %></h6>
                    </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="card-subtitle mb-2 text-start"> Created by <%= board.creator.name %></h6>
                            <%= link_to board_path(board) do %>
                                <i class="bi bi-eye icon-color"></i>
                            <% end %>
                       </div>     
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>