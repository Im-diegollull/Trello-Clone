<%= form_with model: board, local: true do |form| %>
<div class="card white-font mt-4" style="width: auto;">
    <div class="card-body">
        <div class="form-group mb-3">
            <%= form.collection_select :creator_id, User.all, :id, :name, {prompt: "Select a Creator"}, {class: "form-control"} %>
        </div>
        <!-- Need to manage more than one user in this form-->
        <div class="form-group mb-3">
            <%= form.collection_select :user_id, User.all, :id, :name, {prompt: "Select Users"}, {class: "form-control"} %>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <%= form.text_field :name, placeholder: "Board's Name", class: "form-control mb-4", required: true %>
        </div>    
        <div class="actions d-flex justify-content-center align-items-center gap-2">
            <%= form.submit "Submit", class: "btn btn-primary custom-button mb-4" %>
            <%= link_to boards_path, class: "btn btn-primary custom-button mb-4" do %>
                <i class="bi bi-arrow-90deg-left"></i>
            <% end %>
        </div>
    </div>
</div>
<% end %>