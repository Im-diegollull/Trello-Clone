<h1><%= @board.name %></h1>
<div class="container text-center">
  <div class="row align-items-start">
    <% @states.each do |state| %>
      <div class="col">
        <h2><%= state.status %></h2>
        <% state.tasks.each do |task| %>
          <div>
            <h3><%= task.title %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
