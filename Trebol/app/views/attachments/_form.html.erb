<%= form_with model: [@board, @state, @task, attachment], local: true do |form| %>
    <div class="form-group">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: 'form-control', placeholder: "Add a comment" %>
    </div>
    <div class="form-group">
        <%= form.label :file_link %>
        <%= form.text_field :file_link, class: 'form-control', placeholder: "URL to the file" %>
    </div>
    <div class="actions d-flex justify-content-center align-items-center mt-4">
        <%= form.submit "Submit", class: "btn btn-primary custom-button mb-4" %>
        <%= link_to board_state_task_path(@board, @state, @task), class: "btn btn-primary custom-button mb-4" do %>
            <i class="bi bi-arrow-90deg-left"></i>
        <% end %>
    </div>
<% end %>
