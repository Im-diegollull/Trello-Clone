<%= form_with model: [@board, @state, @task, attachment], local: true do |form| %>
    <div class="form-group">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: 'form-control', placeholder: "Add a comment" %>
    </div>
    <div class="form-group">
        <%= form.label :file_link %>
        <%= form.text_field :file_link, class: 'form-control', placeholder: "URL to the file" %>
    </div>
    <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
    </div>
<% end %>
